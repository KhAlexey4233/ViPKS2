<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="16dp"
  android:layout_marginBottom="12dp"
  android:foreground="?attr/selectableItemBackground"
  app:cardBackgroundColor="@color/blue_200"
  app:cardCornerRadius="8dp"
  app:cardElevation="1dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/item_number"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="12dp"
      android:layout_marginTop="12dp"
      android:fontFamily="@font/gothampro_bold"
      android:textColor="@color/black"
      android:textSize="16sp"
      tools:text="11 класс" />

    <TextView
      android:id="@+id/item_lesson"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="12dp"
      android:fontFamily="@font/gothampro_regular"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="Термодинамика" />

    <TextView
      android:id="@+id/item_students"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="12dp"
      android:layout_marginBottom="12dp"
      android:fontFamily="@font/gothampro_regular"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="3 ученика" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/item_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/gothampro_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Удалить"
        android:textColor="@color/red_500" />

    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>