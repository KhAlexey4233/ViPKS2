<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  tools:context=".presentation.screens.student.StudentTestFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
      android:id="@+id/btn_back"
      android:layout_width="42dp"
      android:layout_height="42dp"
      app:cardBackgroundColor="@color/blue_400"
      app:cardCornerRadius="32dp">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:src="@drawable/icon_back"
        app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:fontFamily="@font/gothampro_bold"
      android:text="Домашнее задание"
      android:textColor="@color/black"
      android:textSize="16sp" />

  </LinearLayout>

  <TextView
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_weight="1"
    android:fontFamily="@font/gothampro_bold"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:visibility="gone"
    tools:text="Вы выполнили домашнее задание. Ваш результат - 13 из 20." />

  <TextView
    android:id="@+id/errors_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/gothampro_bold"
    android:gravity="center"
    android:visibility="gone"
    android:text="Работа над ошибками"
    android:textColor="@color/red_500"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/gothampro_bold"
    android:textColor="@color/black"
    android:textSize="16sp"
    tools:text="Вопрос ВопросВопросВопросВопросВопросВопросВопросВопросВопрос" />

  <RadioGroup
    android:id="@+id/answers_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp">

    <RadioButton
      android:id="@+id/answer_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:buttonTint="@color/blue_500"
      android:fontFamily="@font/gothampro_medium"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="Ответ 1" />

    <RadioButton
      android:id="@+id/answer_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:buttonTint="@color/blue_500"
      android:fontFamily="@font/gothampro_medium"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="Ответ 1" />

    <RadioButton
      android:id="@+id/answer_3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:buttonTint="@color/blue_500"
      android:fontFamily="@font/gothampro_medium"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="Ответ 1" />

    <RadioButton
      android:id="@+id/answer_4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:buttonTint="@color/blue_500"
      android:fontFamily="@font/gothampro_medium"
      android:textColor="@color/black"
      android:textSize="14sp"
      tools:text="Ответ 1" />

  </RadioGroup>

  <Space
    android:layout_width="1dp"
    android:layout_height="0dp"
    android:layout_weight="1" />

  <Button
    android:id="@+id/btn_download"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:backgroundTint="@color/blue_200"
    android:fontFamily="@font/gothampro_bold"
    android:paddingVertical="16dp"
    android:text="Скачать материал"
    android:textColor="@color/blue_500"
    app:cornerRadius="12dp" />

  <Button
    android:id="@+id/btn_pin_document"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="6dp"
    android:backgroundTint="@color/blue_200"
    android:fontFamily="@font/gothampro_bold"
    android:paddingVertical="16dp"
    android:text="Прикрепить решение"
    android:textColor="@color/blue_500"
    android:visibility="gone"
    app:cornerRadius="12dp" />

  <Button
    android:id="@+id/btn_next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="32dp"
    android:fontFamily="@font/gothampro_bold"
    android:paddingVertical="16dp"
    android:text="Следующий вопрос"
    android:textColor="@color/white"
    app:cornerRadius="12dp" />

</LinearLayout>